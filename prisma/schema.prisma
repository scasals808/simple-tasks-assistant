generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id              String   @id @default(cuid())
  sourceDraftId   String   @unique
  sourceChatId    String
  sourceMessageId String
  sourceText      String
  sourceLink      String?
  creatorUserId   String
  assigneeUserId  String
  priority        String
  deadlineAt      DateTime?
  status          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  sourceDraft TaskDraft @relation("TaskSourceDraft", fields: [sourceDraftId], references: [id])
  createdByDraft TaskDraft[] @relation("TaskDraftCreatedTask")

  @@unique([sourceChatId, sourceMessageId])
}

model TaskDraft {
  id              String   @id @default(cuid())
  token           String   @unique
  status          String
  step            String
  createdTaskId   String?
  sourceChatId    String
  sourceMessageId String
  sourceText      String
  sourceLink      String?
  creatorUserId   String
  assigneeId      String?
  priority        String?
  deadlineAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  createdTask Task? @relation("TaskDraftCreatedTask", fields: [createdTaskId], references: [id])
  task        Task? @relation("TaskSourceDraft")
}

model PendingDeletion {
  id            String   @id @default(cuid())
  chatId        String
  messageId     String
  deleteAfterAt DateTime
  status        String   @default("PENDING")
  attempts      Int      @default(0)
  lastError     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status, deleteAfterAt])
}

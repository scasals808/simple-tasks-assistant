generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id              String   @id @default(cuid())
  sourceDraftId   String   @unique
  workspaceId     String?
  sourceChatId    String
  sourceMessageId String
  sourceText      String
  sourceLink      String?
  creatorUserId   String
  assigneeUserId  String
  priority        String
  deadlineAt      DateTime?
  status          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  sourceDraft TaskDraft @relation("TaskSourceDraft", fields: [sourceDraftId], references: [id])
  createdByDraft TaskDraft[] @relation("TaskDraftCreatedTask")
  workspace      Workspace?   @relation(fields: [workspaceId], references: [id])

  @@unique([sourceChatId, sourceMessageId])
  @@index([workspaceId])
}

model TaskDraft {
  id              String   @id @default(cuid())
  token           String   @unique
  status          String
  step            String
  createdTaskId   String?
  workspaceId     String?
  sourceChatId    String
  sourceMessageId String
  sourceText      String
  sourceLink      String?
  creatorUserId   String
  assigneeId      String?
  priority        String?
  deadlineAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  createdTask Task? @relation("TaskDraftCreatedTask", fields: [createdTaskId], references: [id])
  task        Task? @relation("TaskSourceDraft")
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])

  @@index([workspaceId])
}

model Workspace {
  id             String   @id @default(cuid())
  chatId         String   @unique
  title          String?
  ownerUserId    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  tasks   Task[]
  drafts  TaskDraft[]
  members WorkspaceMember[]
  invites WorkspaceInvite[]
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  role        String
  joinedAt    DateTime
  lastSeenAt  DateTime

  workspace Workspace @relation(fields: [workspaceId], references: [id])

  @@unique([workspaceId, userId])
  @@index([userId])
  @@index([workspaceId, role])
}

model WorkspaceInvite {
  id          String   @id @default(cuid())
  token       String   @unique
  workspaceId String
  expiresAt   DateTime?
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])

  @@index([workspaceId])
  @@index([expiresAt])
}

model PendingDeletion {
  id            String   @id @default(cuid())
  chatId        String
  messageId     String
  deleteAfterAt DateTime
  status        String   @default("PENDING")
  attempts      Int      @default(0)
  lastError     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status, deleteAfterAt])
}

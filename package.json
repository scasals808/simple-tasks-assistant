{
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "tg:webhook:set": "tsx scripts/telegram-webhook.ts set",
    "tg:webhook:info": "tsx scripts/telegram-webhook.ts info",
    "tg:webhook:delete": "tsx scripts/telegram-webhook.ts delete",
    "tg:webhook:render:set": "tsx scripts/telegram-webhook-render.ts set",
    "tg:webhook:render:info": "tsx scripts/telegram-webhook-render.ts info",
    "tg:webhook:render:delete": "tsx scripts/telegram-webhook-render.ts delete",
    "tg:commands:set": "tsx scripts/telegram-commands.ts set",
    "tg:commands:get": "tsx scripts/telegram-commands.ts get",
    "tg:commands:delete": "tsx scripts/telegram-commands.ts delete",
    "start": "tsx src/main.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "fastify": "^5.7.4",
    "telegraf": "^4.16.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^8.57.1",
    "prisma": "^6.19.2",
    "vitest": "^4.0.18"
  }
}
